<%- include('../layout/header.ejs') %>

<main class="container section page-rooms">
    <header class="section-head with-action">
        <h2>Danh sách phòng</h2>
        <a class="btn primary" href="/rooms/add">+ Thêm phòng mới</a>
    </header>

    <% if (rooms.length === 0) { %>
    <div class="empty-state">Hiện chưa có phòng nào.</div>
    <% } %>

    <div class="row">
        <% rooms.forEach(room => { %>
        <div class="card">
            <div class="thumb">
                <img src="<%= room.HinhAnh || '/image/no-image.jpg' %>"
                    alt="Room image">
            </div>
            <div class="card-body">
                <h3 class="title"><%= room.SoPhong %> - <%= room.TenLoaiPhong
                    %></h3>
                <p class="meta">
                    Tầng: <%= room.ViTriTang %> <br>
                    Trạng thái: <%= room.TrangThaiPhong %> <br>
                    Giá: <%= room.Gia.toLocaleString() %>₫
                </p>
            </div>
        </div>
        <% }) %>
    </div>
</main>

<%- include('../layout/footer.ejs') %>
